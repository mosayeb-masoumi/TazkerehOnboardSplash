<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style parent="Widget.AppCompat.Button.Borderless" name="ButtonColored">

        <item name="android:layout_width">wrap_content</item>

        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingStart">@dimen/medium_size</item>

        <item name="android:paddingEnd">@dimen/medium_size</item>

        <item name="android:background">@drawable/background_button</item>

        <item name="android:text">@string/title_button</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#fff</item>

    </style>
    <style name="Title">

        <item name="android:layout_width">wrap_content</item>

        <item name="android:layout_height">wrap_content</item>

        <item name="android:ellipsize">end</item>

        <item name="android:gravity">center</item>

        <item name="android:maxLines">2</item>

        <item name="android:textColor">#000</item>

        <item name="android:textSize">@dimen/title_size</item>

        <item name="android:textStyle">bold</item>

        <item name="autoSizeTextType">uniform</item>

    </style>


    <style name="SubTitle">

        <item name="android:layout_width">wrap_content</item>

        <item name="android:layout_height">wrap_content</item>

        <item name="android:ellipsize">end</item>

        <item name="android:gravity">center</item>

        <item name="android:maxLines">3</item>

        <item name="android:textColor">#636060</item>

        <item name="android:textSize">@dimen/sub_title_size</item>

        <item name="autoSizeTextType">uniform</item>

    </style>



</resources>